<body>

        <!--CAJAS HEADER-->

        <%- include('../partials/header')%>

        <main class="contenedor-main">
                <div class="contenedor-main-imagen-perfil">
                        <div class="saludoUsuario">
                                <h2>Hola <%= usuario.nombre %> </h2>
                                <img src="/images/avatars/<%= usuario.imagenPerfil %>">
                        </div>

                        <div class="datosUsuario">
                                <h5>Usuario</h5>
                                <h4><%= usuario.userName %></h4>
                                <h5>Correo</h5>
                                <h6><%= usuario.correoElectronico %></h6>
                                <form action="/users/logout" method="GET" name="form-login">
                                        <input class="buttonp" id="signup-submit" type="submit" value="Cerrar Sesion">
                                </form>
                        </div>

                </div>

        </main>

        <!--*** FIN CUERPO PRINCIPAL ****-->

        <!--*** FOOTER ****-->

        <%- include('../partials/footer')%>

